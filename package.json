{
  "type": "module",
  "name": "krd-typescript-template",
  "version": "1.0.0",
  "description": "A node typescript project template for the Kordis landscape",
  "main": "./dist/index.js",
  "scripts": {
    "start:dev": "tsc-watch --onSuccess \"node ./dist/index.js\"",
    "start": "node ./dist/index.js",
    "test": "jest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "build:release": "tsc --build tsconfig.release.json",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@types/jest": "29.0.3",
    "@types/node": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "jest": "29.0.3",
    "prettier": "2.7.1",
    "ts-jest": "29.0.1",
    "tsc-watch": "5.0.3",
    "typescript": "4.8.3"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md,graphql,json}": "prettier --write"
  }
}

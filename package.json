{
  "type": "module",
  "name": "krd-typescript-template",
  "version": "1.0.0",
  "description": "A node typescript project template for the Kordis landscape",
  "main": "./dist/index.js",
  "scripts": {
    "start:dev": "tsc-watch --onSuccess \"node ./dist/index.js\"",
    "start": "node ./dist/index.js",
    "test": "jest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "build:release": "tsc --build tsconfig.release.json",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@types/jest": "29.5.4",
    "@types/node": "18.17.14",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "jest": "29.6.4",
    "prettier": "3.0.2",
    "ts-jest": "29.1.1",
    "tsc-watch": "6.0.4",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md,graphql,json}": "prettier --write"
  }
}

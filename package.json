{
  "type": "module",
  "name": "krd-typescript-template",
  "version": "1.0.0",
  "description": "A node typescript project template for the Kordis landscape",
  "main": "./dist/index.js",
  "scripts": {
    "start:dev": "tsc-watch --onSuccess \"node ./dist/index.js\"",
    "start": "node ./dist/index.js",
    "test": "jest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "build:release": "tsc --build tsconfig.release.json",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/jest": "29.5.14",
    "@types/node": "20.17.57",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "9.28.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.7",
    "lint-staged": "15.2.10",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "ts-jest": "29.3.4",
    "tsc-watch": "6.3.1",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md,graphql,json}": "prettier --write"
  }
}
